{
  "name": "BOOST Wallet",
  "short_name": "BOOST Wallet",
  "description": "Cardano light wallet",
  "manifest_version": 3,
  "version": "1.0.0",
  "action": {
    "default_title": "BOOST Wallet",
    "default_popup": "index.html"
  },
  "icons": {
    "128": "logo192.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; style-src 'unsafe-inline' 'self'; default-src 'self'"
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
